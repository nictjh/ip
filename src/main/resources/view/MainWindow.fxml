<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="app.MainWindow">
    <children>
        <VBox alignment="CENTER" spacing="10" AnchorPane.topAnchor="0.0" AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0" AnchorPane.bottomAnchor="0.0">
            <ScrollPane fx:id="scrollPane" fitToWidth="true" prefHeight="400.0" prefWidth="300.0">
                <content>
                    <VBox fx:id="dialogContainer" spacing="10" />
                </content>
            </ScrollPane>
            <HBox spacing="10">
                <TextField fx:id="userInput" promptText="Type your message..." />
                <Button fx:id="sendButton" text="Send" onAction="#handleUserInput" />
            </HBox>
        </VBox>
    </children>
</AnchorPane>